<% provide(:title, "Home") %>

<h1> All Scrapers </h1>

<table class ="table table-hover">
	<div align="right">
  <%= link_to "New Scraper", scrapers_new_path, class: "btn btn-primary"%>
  </div>
  <thead>
    <th>ID</th>
    <th>Name</th>
    <th>YouTube ID</th>
    <th>Links </th>
  </thead>
 
  <% @scrapers.each do |s| %>
    <tr>
      <td><%= s.id %></td>
      <td><%= s.name %></td>
      <td><%= s.youtube_id %></td>
      <td><%= link_to 'Show', scraper_path(s) %> | 
      		<%= link_to 'Edit', edit_scraper_path(s) %> | 
      		<%= link_to 'Delete', scraper_path(s),
      		method: :delete,
      		data: { confirm: 'Are you sure>'} %>
      </td>
    </tr>
  <% end %>
</table>

