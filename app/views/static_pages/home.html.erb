<% provide(:title, "Home") %>

<h1> All Scrapers </h1>
<table class ="table table-hover">
	<div align="right">
  <%= link_to "New Scraper", scrapers_new_path, class: "btn btn-primary"%>
  </div>
  
  <thead>
    <th>Name</th>
    <th>Created At</th>
    <th>YouTube ID</th>
    <th>XML Output</th>
    <th>Actions </th>
  </thead>
 
  <% @scrapers.each do |s| %>
    <tr>
      <td><%= s.name %></td>
      <td><%= s.created_at %></td>
      <td><%= s.youtube_id %></td>
      <td><%= link_to 'xml_output', '#' %></td>
      <td><%= link_to 'Show', scraper_path(s) %> | 
      		<%= link_to 'Edit', edit_scraper_path(s) %> | 
      		<%= link_to 'Delete', scraper_path(s),
      		method: :delete,
      		data: { confirm: 'Are you sure>'} %>
      </td>
    </tr>
  <% end %>
</table>
<%= will_paginate @scrapers %>