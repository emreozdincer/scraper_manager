<% provide(:title, 'New') %>
<h1>Create a new scraper</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@scraper) do |f| %>
	    <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :youtube_id, "YouTube ID" %>
      <%= f.text_field :youtube_id, class: 'form-control' %>

      <%= f.submit "Create scraper", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>