<% provide(:title, 'Index') %>

<h1> All Scrapers </h1>

<table class ="table table-hover">
  <thead>
    <th>ID</th>
    <th>Name</th>
    <th>YouTube ID</th>
    <th>Link </th>
  </thead>
 
  <% @scrapers.each do |s| %>
    <tr>
      <td><%= s.id %></td>
      <td><%= s.name %></td>
      <td><%= s.youtube_id %></td>
      <td><%= link_to 'Show', scraper_path(s) %></td>
    </tr>
  <% end %>
</table>